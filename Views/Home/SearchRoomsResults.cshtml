@using System.Collections.Generic;
@Html.AntiForgeryToken()
@model List<Hotel_landlyst_v_0_01.Models.RoomModel>
@*@model IEnumerable<Hotel_landlyst_v_0_01.Models.RoomModel>*@

@{
    ViewData["Title"] = "Søgeresultat";
}




<div class="text-center">
    <h1>Søgeresultat</h1>
    <p>Følgende værelser er ledige i den valgte periode.</p>
</div>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="mainBody">
        <form asp-action="Booking" method="post">
            <div class="row">
                <div class="col-sm-5" id="searchResultLeft">

                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].RoomType" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText"> @Model[i].RoomType</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].RoomNumber" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText">@Model[i].RoomNumber</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].Price" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText">@Model[i].Price</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].MiniBar" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText">@Model[i].MiniBar</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].Aircondition" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText">@Model[i].Aircondition</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].PetsPossible" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText">@Model[i].PetsPossible</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <label asp-for="@Model[i].RoomDescription" class="label"></label>
                        </div>
                        <div class="col-sm-7">
                            <span class="bodyText">@Model[i].RoomDescription</span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5" id="searchResultRight">
                    <div class="row">
                        <div class="col-sm-12">
                            <div id="roomPadding">
                                <img id="rooms" src="~/Images/Rooms/@(Model[i].ImageName).jpg" class="img-responsive" alt="Image">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <span asp-for="@Model[i].RoomId"></span>
                        </div>
                        <div class="col-sm-5">
                        </div>
                        <div class="col-sm-2">
                            <div class="align-self-sm-center bookingbuttonPadding">
                                <button type="submit" name="submit" value="@Model[i].RoomId" class="btn btn-primary">Reserver</button>
                                @*<input type="submit" name="booking" value="Reserver" class="btn btn-primary" />*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
}



